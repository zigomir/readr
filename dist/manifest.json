{
  "manifest_version": 2,

  "name": "What am I reading?",
  "description": "Outputs most used words of current page.",
  "version": "0.1",

  "browser_action": {
    "default_title": "What is most frequent word here?",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
